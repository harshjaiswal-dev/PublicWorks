{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "Logs/log.txt" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithExceptionDetails" ]
  },
  "Authentication": {
  "Google": {
    "RedirectUri": "http://localhost:5142/auth/callback"
  }
  },
  "Jwt": {
    "Key": "a_very_long_random_secret_key_here_change_me",
    "Issuer": "YourApp",
    "Audience": "YourAppUsers"
  },
  "AllowedHosts": "*"

}
